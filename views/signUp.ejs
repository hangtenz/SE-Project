<% include header.html %>
<form action="signUp" method = "POST" style="border:1px solid #ccc">
    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label for="Name"><b>First Name</b></label>
        <input name="first_name" id="First_Name" placeholder="Sam" require="true" type="text" />

        <label for="Name"><b>Last Name</b></label>
        <input name="last_name" id="Last_Name" placeholder="Smith" require="true" type="text" /> 

        <div style="width:100%">
            <input type="radio" name="gender"  style="margin-bottom:15px"> Male </input>
            <input type="radio" name="gender"  style="margin-bottom:15px"> Female </input>
        </div>

        <label for="idenNumber"><b>Identification number</b></label>
        <input type="text" placeholder="1-2345-67891-011"  name="idenNumber" required>

        <label for="phone"><b>Phone</b></label>
        <input type="text" placeholder="081-2345678" name="idenNumber" required>

        <label for="phone"><b>Address</b></label>
        <input type="text" placeholder="Thailand" name="idenNumber" required>
        
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="email" required>

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>

        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

        <label>
            <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
        </label>

        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

        <div class="clearfix">
            <a href="/"><button type="button" class="cancelbtn">Cancel</button></a>
            <button type="submit" class="signupbtn" onclick="submitForm()">Sign Up</button>
        </div>
    </div>
</form>
